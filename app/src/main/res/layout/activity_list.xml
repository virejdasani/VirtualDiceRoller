<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:background="#000000"
    tools:context=".ListActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sixsided"
            android:layout_width="245dp"
            android:layout_height="115dp"
            android:background="#11E3B2"
            android:text="Classic 6-Sided Dice"
            android:textSize="32sp"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/sixfacedicelogo" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Developed By Virej Dasani" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/eightsided"
            android:layout_width="245dp"
            android:layout_height="115dp"
            android:background="#11E318"
            android:text="8-Sided dice"
            android:textSize="32sp"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="167dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/eightfacedicelogo" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Developed By Virej Dasani" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/tensidedbutton"
            android:layout_width="245dp"
            android:layout_height="115dp"
            android:background="#E3D211"
            android:text="10-Sided Dice"
            android:textSize="32sp"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/tendicelogo" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Developed By Virej Dasani" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/twelvesidedbutton"
            android:layout_width="245dp"
            android:layout_height="115dp"
            android:background="#E38111"
            android:text="12-Sided Dice"
            android:textSize="32sp"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="137dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/twelvefacedicelogo" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Developed By Virej Dasani" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/twentyfoursidedbutton"
            android:layout_width="245dp"
            android:layout_height="115dp"
            android:background="#E34C11"
            android:text="24-Sided Dice"
            android:textSize="32sp"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="144dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/twelvefacedicelogo" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="144dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/twelvefacedicelogo" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Developed By Virej Dasani" />

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-2982461694444134/5577224840">
    </com.google.android.gms.ads.AdView>


</LinearLayout>